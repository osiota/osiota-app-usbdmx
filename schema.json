{
	"type": "object",
	"title": "osiota application usbdmx",
	"description": "This application allows controlling lights via a DMX usb adapter.",
	"properties": {
		"device": {
			"type": "string",
			"title": "USB device",
			"examples": ["/dev/ttyUSB0"]
		},
		"map": {
			"type": "array",
			"format": "table",
			"title": "DMX channels",
			"items": {
				"type": "object",
				"title": "DMX channel",
				"properties": {
					"channel": {
						"title": "Channel",
						"type": "number",
						"minimum": 1,
						"maximum": 512,
						"examples": [ 1 ]
					},
					"node": {
						"title": "Node Name",
						"type": "string",
						"examples": [ "/my-dmx-channel" ]
					},
					"default_value": {
						"title": "Default Value",
						"type": "number",
						"minimum": 0,
						"maximum": 255,
						"examples": [ 63 ]
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
